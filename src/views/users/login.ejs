<%- include ('../includes/head') %> 
    <body>
    
        <%- include ('../includes/header') %> 

        <main>
            <section>
                <form action="/users/access" id="form-login" method="post">

                    <fieldset>
                        <legend>Información Personal</legend>
                            <label for="email">Ingresá tú email:</label>
                            <input type="email" name="email" placeholder="juan@example.com" value="<%= locals.oldData ? oldData.email : null %>">
                            <% if (locals.errors && errors.email) { %>
                                <p class="msg-error"> <%= errors.email.msg %> </p>
                            <% } %>
                            <label for="password">Contraseña:</label>              
                            <input type="password" name="password" placeholder="Ingresá tu contraseña" value="<%= locals.oldData ? oldData.password : null %>">
                            <% if (locals.errors && errors.password) { %>
                                <p class="msg-error"> <%= errors.password.msg %> </p>
                            <% } %>
                            <button type="submit" class="form-button">Ingresar</button>
                    </fieldset> 
                </form>
            </section>
        </main>
        <%- include ('../includes/footer') %> 
    </body>
</html>