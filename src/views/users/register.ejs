<%- include ('../includes/head') %> 
    <body>
    
        <%- include ('../includes/header') %> 

        <main>
            <section>
                <form action="/users/register" method="post" id="form-register" enctype="multipart/form-data">
                    <fieldset> 
                        <legend>Informaci칩n Personal</legend>
                            <label for="nombre">Nombre</label>
                            <input type="text" 
                                name="nombre" 
                                placeholder="Juan"
                                value="<%= locals.oldData ? oldData.nombre : null %>">
                            <% if (locals.errors && errors.nombre) { %>
                                <p class="msg-error"> <%= errors.nombre.msg %> </p>
                             
                            <% } %>
        
                            <label for="apellido">Apellido</label>
                            <input type="text" 
                                name="apellido"  
                                placeholder="Suarez"
                                value="<%= locals.oldData ? oldData.apellido : null %>">
                                <% if (locals.errors && errors.apellido) { %>
                                    <p class="msg-error"> <%= errors.apellido.msg %> </p>
                                 
                                <% } %>
        
                            <label for="email">E-mail</label>
                            <input type="email" 
                                name="email" 
                                placeholder="juan@example.com"
                                value="<%= locals.oldData ? oldData.email : null %>">
                                <% if (locals.errors && errors.email) { %>
                                    <p class="msg-error"> <%= errors.email.msg %> </p>
                                 
                                <% } %>
        
                            <label for="password">Contrase침a</label>              
                            <input type="password" 
                                name="password" 
                                placeholder="Ingres치 tu contrase침a"
                                value="<%= locals.oldData ? oldData.password : null %>">
                                <% if (locals.errors && errors.password) { %>
                                    <p class="msg-error"> <%= errors.password.msg %> </p>
                                 
                                <% } %>
                            <label for="avatar">Foto de perfil</label>              
                            <input type="file" 
                                name="avatar">
                                <% if (locals.errors && errors.avatar) { %>
                                    <p class="msg-error"> <%= errors.avatar.msg %> </p>
                                <% } %>
                             
        
                            <button type="submit" class="form-button">Registrarme</button>
                </fieldset>
                </form>
            </section>
        </main>
        <%- include ('../includes/footer') %> 
    </body>
</html>